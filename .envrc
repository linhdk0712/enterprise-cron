# Environment variables for macOS Apple Silicon development
# Auto-loaded by direnv (install: brew install direnv)

# Increase Rust stack size to prevent LLVM crashes
export RUST_MIN_STACK=16777216

# Reduce parallel jobs to avoid memory pressure
export CARGO_BUILD_JOBS=4

# Disable incremental compilation
export CARGO_INCREMENTAL=0

# Use more verbose output for debugging
export RUST_BACKTRACE=1

