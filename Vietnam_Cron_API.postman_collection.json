              "raw": "{\n  \"name\": \"Updated Job Name\",\n  \"description\": \"Updated description\",\n  \"enabled\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "00000000-0000-0000-0000-000000000000"
                }
              ]
            },
            "description": "Update job. Requires `job:write` permission."
          },
          "response": []
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "00000000-0000-0000-0000-000000000000"
                }
              ]
            },
            "description": "Delete job. Requires `job:delete` permission (Admin only)."
          },
          "response": []
        },
        {
          "name": "Trigger Job",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs/:id/trigger",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", ":id", "trigger"],
              "variable": [
                {
                  "key": "id",
                  "value": "00000000-0000-0000-0000-000000000000"
                }
              ]
            },
            "description": "Manually trigger job execution. Requires `job:execute` permission."
          },
          "response": []
        }
      ],
      "description": "Job management endpoints with RBAC"
